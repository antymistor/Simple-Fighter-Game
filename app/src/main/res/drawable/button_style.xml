<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <gradient android:startColor="#0d76e1" android:endColor="#ecf2f9"
            android:angle="270" />
        <stroke android:width="1dip" android:color="#d4f403" />
        <corners android:radius="10dp" />
        <padding android:left="10dp" android:top="10dp"
            android:right="10dp" android:bottom="10dp" />
    </shape>
</item>

<item android:state_focused="true">
    <shape>
        <gradient android:startColor="#e93919" android:endColor="#f4ebea"
            android:angle="270" />
        <stroke android:width="1dip" android:color="#d0f403" />
        <corners android:radius="10dp" />
        <padding android:left="10dp" android:top="10dp"
            android:right="10dp" android:bottom="10dp" />
    </shape>
</item>

<item>
    <shape>
        <gradient android:startColor="#fdfd03" android:endColor="#f4f5f7"
            android:angle="270" />
        <stroke android:width="1dip" android:color="#f1ec53" />
        <corners android:radius="10dip" />
        <padding android:left="10dp" android:top="10dp"
            android:right="10dp" android:bottom="10dp" />
    </shape>
</item>
</selector>